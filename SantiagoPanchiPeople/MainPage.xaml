<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SantiagoPanchiPeople.MainPage"
             Title="Santiago Panchi">
  

    <ScrollView>
        <StackLayout Padding="20" Spacing="15" BackgroundColor="black">
            <Frame x:Name="spanchi_card"
               BackgroundColor="#1e293b"
               CornerRadius="15"
               HasShadow="True"
               Padding="15"
               Margin="0,0,0,15"
               BorderColor="#64748b">
                <StackLayout Orientation="Horizontal" Spacing="20">
                    <Image x:Name="spanchi_image"
                           Source="santiago_panchi.jpg"
                           WidthRequest="100"
                           HeightRequest="100"
                           Aspect="AspectFill"
                           VerticalOptions="Center" />

                    <StackLayout VerticalOptions="Center">
                        <Label x:Name="spanchi_name_label"
                           Text="Santiago Panchi"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="#f1f5f9" />
                        <Label x:Name="spanchi_age_label"
                           Text="20 años"
                           FontSize="16"
                           TextColor="#94a3b8" />
                    </StackLayout>
                </StackLayout>
            </Frame>

            <Entry x:Name="spanchi_new_person_entry" 
               Placeholder="Ingresa un nombre"
               BackgroundColor="#1e293b"
               PlaceholderColor="#94a3b8"
               TextColor="#f1f5f9"
               Margin="0,0,0,15"
               HeightRequest="50"/>

            <StackLayout Orientation="Horizontal" Spacing="15" HorizontalOptions="Center">
                <Button x:Name="spanchi_add_button"
                        Text="Agregar Persona" 
                        Command="{Binding AddPersonCommand}" 
                        HorizontalOptions="Center" 
                        Clicked="OnNewButtonClicked" 
                        BackgroundColor="#007AFF" 
                        TextColor="White" 
                        CornerRadius="5" />
                <Button x:Name="spanchi_get_button"
                    Text="Obtener Personas"
                    Command="{Binding RefreshPeopleCommand}" 
                    HorizontalOptions="FillAndExpand"
                    BackgroundColor="#16a34a"
                    TextColor="#ffffff"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HeightRequest="50" />
            </StackLayout>

            <Label x:Name="spanchi_status_message"
               Text="{Binding StatusMessage}" 
               FontSize="14"
               TextColor="#f43f5e"
               HorizontalOptions="Center" 
               VerticalOptions="EndAndExpand"
               Margin="0,10,0,0" />

            <ListView x:Name="spanchi_people_list"
                  ItemsSource="{Binding People}" 
                  SelectionMode="Single" 
                  ItemSelected="OnItemSelected"
                  BackgroundColor="#1e293b"
                  SeparatorColor="#64748b"
                  Margin="0,10,0,0"
                  HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame BackgroundColor="#1e293b"
                               CornerRadius="8"
                               Padding="10"
                               Margin="5,2"
                               BorderColor="#64748b">
                                <Label Text="{Binding Name}" 
                                   FontSize="16" 
                                   TextColor="#f1f5f9" />
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
    </ScrollView>

</ContentPage>
